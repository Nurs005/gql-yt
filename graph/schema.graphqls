scalar Bytes
scalar BigDecimal

type Account {
  id: Bytes!
  raiting: BigDecimal!
  borrows: [Borrow!]!
  liquidations: [Liquidate!]!
}

type Borrow {
  amountUSD: BigDecimal!
  account: Account!
}

type Liquidate {
  amountUSD: BigDecimal!
  liquidatee: Account!
}

input Account_Filter {
  id: Bytes
}

type Query{
  accounts(where: Account_Filter): [Account!]
}